  
    <h1>Tech Comm Resources</h1>

   <table class="table table-striped">
      <thead>
        <tr>
          <th>Resource Name</th>
          <th>Resource Topic</th>
          <th>Resource Type</th>
          <th>Student Type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @entries.each do |entry| %>
          <tr>
            <td><%= entry.title %></td>
            <td><%= link_to Topic.find(entry.topic_id).name, topic_path(entry.topic_id) %></td>
            <td><%= link_to Category.find(entry.category_id).name, category_path(entry.category_id) %></td>
            <td><%= entry.level %></td>
            <td><%= link_to 'Show', entry %></td>
            <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
            <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Entry', new_entry_path, class: 'btn btn-primary' %>