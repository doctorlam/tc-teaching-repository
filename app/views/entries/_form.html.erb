<%= form_with(model: entry, local: true) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :entry_title %>
  </div>

  <div class="field">
    <%= form.label :entry_type %>
    <%= form.text_field :entry_type, id: :entry_type %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre, id: :entry_genre %>
  </div>

  <div class="field">
    <%= form.label :level %>
    <%= form.text_field :level, id: :entry_level %>
  </div>

  <div class="field">
    <%= form.label :course %>
    <%= form.text_field :course, id: :entry_course %>
  </div>
  <div class="form-field">
    <% if @entry.attachment? %>
    <%= form.check_box :remove_attachment %>

      <%= @entry.attachment.file.filename %>
    <% else %>

    <%= form.file_field :attachment %>

    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
