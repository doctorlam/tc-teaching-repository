<div class="container-fluid">
<p id="notice"><%= notice %></p>
<div class="row">
    <div class="col-md-4">
      <div class="type-filter">
      <h3>Filter by category</h3>
      <%= form_tag entries_path, method: 'get', id: "entries_search" do%>

        <% @categories.each do |category| %>
        <%= check_box_tag "by_category[]", category.id %><%= category.name %><br>
              <% end %>

        <%= submit_tag "submit" %>
              <% end %>

      </div><!--/type-filter-->

      
    </div><!--/col-md-4-->
    
    <div class="col-md-8">
      <div id="entries"><%= render 'entries' %></div>
    </div>
  </div><!--/row-->
</div><!--/container-->
<script type = "text/javascript">
$(function () {
  $('input[type=checkbox]').change(function(){
  $.get($('#entries_search').attr('action'),
  $('#entries_search').serialize(), null, 'script');
  return false;

});

  $('#entries_search').submit(function () {
    $.get(this.action, $(this).serialize(), null, 'script');
    return false;
  });
});
</script> 