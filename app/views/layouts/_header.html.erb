<header>
	<div class="logo">
		<div class="circle">
			<%= link_to "UNT TCR", root_path %>
		</div>
		<ul>
			<li>UNT Tech Comm Repository</li>
			<li>A resource for technical communication instructors</li>
		</ul>
	</div>
	<nav>
     
       <!-- Collect the nav links, forms, and other content for toggling -->
	
	
			<% if user_signed_in? %>

			<ul>
		<% if user_signed_in? && current_user.admin? %>

			<li><%= link_to "Resource Types", categories_path %></li>
			<li><%= link_to "Topics", topics_path %></li>
		<% end %>

				<li><%= link_to 'All Resources', entries_path %>
					<li><%= link_to 'Create Resource', new_entry_path, class: 'btn btn-primary' %></li>
				<li><%= link_to "Sign Out", destroy_user_session_path,  method: :delete  %></li>
				</ul>
			<p class="signed-in">Signed in as: <%= current_user.email %></p>
			<% else %>
				<li><%= link_to "Sign In", new_user_session_path %></li>
				<li><%= link_to "Register", new_user_registration_path%></li>

			<% end %>
		</ul>
	</nav>
</div><!--/navbar collapse -->
</header>