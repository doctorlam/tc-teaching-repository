<header>
	<div class="logo">
		<div class="circle">
			<h2><%= link_to "UNT TCR", root_path %></h2>
		</div>
		<ul>
			<li>UNT Tech Comm Repository</li>
			<li>A resource for technical communication instructors</li>
		</ul>
	</div>
	<nav>
  	<% if user_signed_in? && current_user.admin? %>
		<ul>
			<li><%= link_to "Resource Types", categories_path %></li>
			<li><%= link_to "Topics", topics_path %></li>
		</ul>
	<% end %>
	
			<% if user_signed_in? %>
			<ul>
				<li>Signed in as: <%= current_user.email %></li>
				<li><%= link_to "Sign Out", destroy_user_session_path,  method: :delete  %></li>
				</ul>
			<ul>
				<li><%= link_to 'Create Resource', new_entry_path, class: 'btn btn-primary' %></li>
			</ul>

			<% else %>
				<li><%= link_to "Sign In", new_user_session_path %></li>
				<li><%= link_to "Register", new_user_registration_path%></li>

			<% end %>
		</ul>
	</nav>

</header>